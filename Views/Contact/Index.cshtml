<!--
    Name: Lidia Laskova
    Program: Contact Manager app
    
    When the user opens the application, he or she can see the table of data and the user is able to
    to click to the button "Add Contact" or to one of the contact's name.
    If the user chooses to add the contact, the the empty form is displayed that can be filled.
    If the user chooses to click on the name, the details page is displayed and and the user is able to either edit, delete, or return to list. 
     -->
@model List<Contact>
<head>
<html>
@{
    ViewBag.Title = "Contact List";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" 
integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.18.0/font/bootstrap-icons.css" rel="stylesheet">
<h3>@ViewBag.Title</h3>
</head>
<!--Display the table with all contacts -->
<table class="table table-bordered table-striped">
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>EMail</th>
        <th>Organization</th>
        <th>Category</th>
    </thead>
    <tbody>
        @foreach (var contact in Model) {
            <tr>
                <td>@Html.ActionLink(contact.FirstName, "Details", new { id = contact.ContactId })</td>
                <td>@Html.ActionLink(contact.LastName, "Details", new { id = contact.ContactId })</td>
                <td>@contact.Phone</td>
                <td>@contact.EMail</td>
                <td>@contact.Organization</td>
                <td>@contact?.Category?.Description</td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Contact" asp-action="Add" class="btn btn-success" >
    <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Add Contact</a>
</html>